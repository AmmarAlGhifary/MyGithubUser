<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".DetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_detail_img"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/user1" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preview"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/nama_asli"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lokasi"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repository"
        android:textColor="@color/design_default_color_secondary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_jumlah_repository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/jumlah_repository"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_detail_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jumlah_follower"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_detail_jumlah_follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/follower"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_detail_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jumlah_following"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_jumlah_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/following"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>